@model IEnumerable<Tramite>

@{
    ViewData["Title"] = "Placas recibidas";
}

<br />
<br />
<div class="border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-center">Placas recibidas</h2>
        </div>
        <div class="col-6 text-end">
           <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info">
                <i class="fas fa-plus"></i> &nbsp; Registra un nuevo usuario
           </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.NumeroPlaca)</th>
                    <th>@Html.DisplayNameFor(m => m.FechaRecepcion)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Id)</td>
                        <td>@Html.DisplayFor(m => item.NumeroPlaca)</td>
                        <td>@Html.DisplayFor(m => item.FechaRecepcion)</td>
                        <td>
              
                                <a class="btn btn-success text-white" asp-action="Editar" style="width:50px" asp-route-id="@item.Id">
                                <i class="fa-solid fa-pen-to-square"></i>
                                </a>
      
                                <a class="btn btn-danger text-white" asp-action="Eliminar" style="width:50px" asp-route-id="@item.Id">
                                <i class="fa-solid fa-trash"></i>
                                </a>


                        </td>
                    </tr>                    
                }
            </tbody>
        </table>

        
    }
</div>