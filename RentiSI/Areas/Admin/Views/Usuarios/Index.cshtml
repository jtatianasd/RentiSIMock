@{
    ViewData["Title"] = "Usuarios";
}


<div class="mt-3">
    <div class="row">
        <div class="col-2 offset-5">
            <h1>
                <small class="text-body-secondary">Usuarios</small>
            </h1>
        </div>
    </div>
</div>
<div class="">
    <div class="row">
        <div class="text-end">
            <a asp-area="Identity" asp-page="/Account/Register"  class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo Usuario</a>
        </div>
    </div>
    <table id="tblUsuarios" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th style="text-align: center;">Nombre</th>
                <th style="text-align: center;">Email</th>
                <th style="text-align: center;">Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/usuario.js"></script>
}