@using RentiSI.Utilidades
@model RentiSI.Modelos.viewModels.UsuarioVM
@{
    ViewData["Title"] = "Actualizar password de Usuario";
    var ParametrosBotones = new { LabelBoton = "Actualizar contraseña Usuario", ClaseBoton = "success" };
}

<h1 class="text-center">Actualizar password de Usuario</h1>

<div class="row">
    <div class="col-md-8 offset-2">
        <form method="POST" asp-action="Edit">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Usuario.Id" asp-for="Usuario.Id" />

            <div class="form-floating mb-3">
                <input asp-for="@Model.Usuario.Nombre" class="form-control" aria-required="true" />
                <label asp-for="@Model.Usuario.Nombre" class="control-label">Nombre</label>
                <span asp-validation-for="@Model.Usuario.Nombre" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="@Model.Usuario.Email" class="form-control" readonly="true" />
                <label asp-for="@Model.Usuario.Email" class="control-label" aria-required="true">Correo</label>
                <span asp-validation-for="Usuario.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="@Model.Password" class="form-control" type="password" autocomplete="new-password" />
                <label asp-for="@Model.Password" class="control-label">Contraseña</label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

            <div class="form-group-row mt-3">
                <div class="col-8 text-center">
                    <partial name="_VistaCrearVolver" model="ParametrosBotones" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}