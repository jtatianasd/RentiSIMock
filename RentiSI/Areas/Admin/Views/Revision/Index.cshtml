@model IEnumerable<Tramite>

@{
    ViewData["Title"] = "Placas recibidas";
}

<div class="form-group row mt-5 mb-5">

    <label class="col-sm-2 col-form-label">Número de placa: </label>
    <div class="col-sm-4">
        <input type="text" class="form-control" value="" placeholder="Número de placa">
    </div>

</div>

<div class="border">

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.NumeroPlaca)</th>
                    <th>@Html.DisplayNameFor(m => m.TipificacionTramiteRevision)</th>
                    <th>@Html.DisplayNameFor(m => m.TipificacionCasuisticaRevision)</th>
                    <th>@Html.DisplayNameFor(m => m.OrganismoTransito)</th>
                    <th>@Html.DisplayNameFor(m => m.FechaRecepcion)</th>
                    <th>@Html.DisplayNameFor(m => m.FechaGestion)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.NumeroPlaca)</td>
                        <td>@Html.DisplayFor(m => item.TipificacionTramiteRevision)</td>
                        <td>@Html.DisplayFor(m => item.TipificacionCasuisticaRevision)</td>
                        <td>@Html.DisplayFor(m => item.OrganismoTransito)</td>
                        <td>@Html.DisplayFor(m => item.FechaRecepcion)</td>
                        <td>@Html.DisplayFor(m => item.FechaGestion)</td>
                        <td>
              
                            <a class="btn btn-success text-white" asp-action="Editar" style="width:50px" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pen-to-square"></i>
                            </a>
 
                        </td>
                    </tr>                    
                }
            </tbody>
        </table>

        
    }
</div>