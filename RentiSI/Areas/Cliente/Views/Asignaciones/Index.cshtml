
@{
    ViewData["Title"] = "Asignacion";
}

<br />
<br />
<div class="border">
    <div class="row">
        <h3>
            <small class="text-body-secondary">Asignación</small>
        </h3>
    </div>
    <div class="col-10 offset-1 mt-4">
        <div class="form-group row">
            <div class="col-4">
                <label>Nombre</label>
            </div>
            <div class="col-8">
                <input class="form-control" placeholder="Ingresa el nombre" />
            </div>
        </div>

        <br />

        <div class="form-group row">
            <div class="col-4">
                <label>Financiacion</label>
            </div>
            <div class="col-8">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="financiacionSwitch">
                </div>
            </div>
        </div>

        <br />
        <div class="form-group row">
            <div class="col-4">
                <label>Impronta</label>
            </div>
            <div class="col-8">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="improntaSwitch">
                </div>
            </div>
        </div>

        <br />
        <div class="form-group row">
            <div class="col-4">
                <label>Fecha Creacion</label>
            </div>
            <div class="col-8">
                <input type="date" id="fechaCreacion" name="fechaCreacion">
            </div>
        </div>

        <br />

        <div class="form-group-row">
            <div class="col-8">
                <partial name="_VistaCrearVolver" />
            </div>
        </div>
    </div>


</div>