@{
    ViewData["Title"] = "Asignacion";
}

<br />
<br />
<div class="border">
    <div class="row">
        <div class="col-2 offset-5">
            <h3>
                <small class="text-body-secondary">Asignaciones</small>
            </h3>
        </div>
    </div>
</div>
<div class="border">

    <br />
    <div class="row">
        <div class="col-4 offset-4">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nueva Asignacion</a>
        </div>
    </div>
    <br />
    <table id="tblAsignaciones" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>FechaCreacion</th>
                <th>Numero de Placa</th>
                <th>Financiacion</th>
                <th>Impronta</th>
                <th>Fecha de negocio</th>
                <th>Organismo de transito</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/asignacion.js"></script>
}