@model RentiSI.Modelos.viewModels.ResponseViewModel
@{
    ViewData["Title"] = "Gestion";
    var ParametrosBotones = new { LabelBoton = "Gestionar Trámite", ClaseBoton = "warning" };
}

<div class="container mt-3 d-flex justify-content-center">
    <div class="row">
        <div class="mt-4 text-center">
            <h3>
                <small class="text-body-secondary">Editar Trámite</small>
            </h3>
        </div>

        <form method="POST" asp-action="Edit">
            <input type="hidden" asp-for="@Model.GestionTramite.GestionId" value="@Model.GestionTramite.GestionId" />
            <div class="col-12 offset-1 mt-4">
                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Número de placa</label>
                    </div>
                    <div class="col-6">
                        <label asp-for="@Model.Tramite.NumeroPlaca">@Model.Tramite.NumeroPlaca</label>
                    </div>
                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Usuario Gestión Tramite</label>
                    </div>
                    <div class="col-6">
                        <div class="">
                            <label asp-for="UsuarioTramite">@Model.UsuarioTramite</label>
                        </div>
                    </div>
                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Organismo de Tránsito</label>
                    </div>
                    <div class="col-6">
                        @Html.DropDownListFor(m => m.Tramite.OrganismoDeTransitoId, Model.ListaOrganismosTransito,
                                 "-Por favor seleccione un organismo de transito-", new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Tipo de Rechazo</label>
                    </div>
                    <div class="col-6">

                        @Html.ListBoxFor(x => x.SelectedCasuisticasIds, Model.ListaCasuisticas, new { @class = "form-control" })
                        <span class="mt-1 mensajeCasustica">@Model.MensajeCasuisticas</span>

                    </div>
                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Observación</label>
                    </div>
                    <div class="col-6">
                        <textarea class="form-control" id="Observacion" rows="3" asp-for="@Model.GestionTramite.Observacion">@Model.GestionTramite.Observacion"</textarea>
                    </div>
                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Aprobado</label>
                    </div>
                    <div class="col-6">
                        <div class="form-check form-switch">
                            <input asp-for="@Model.GestionTramite.EsGestionTramite" class="form-check-input" type="checkbox" id="esGestionTramiteSwitch">
                            <span asp-validation-for="GestionTramite.EsGestionTramite" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Tipo estado Tramite</label>
                    </div>
                    <div class="col-6">
                        @Html.DropDownListFor(m => m.GestionTramite.IdDetalleEstado, Model.TipoDetalleEstado,
                                 "-Por favor seleccione un tipo estado trámite-", new { @class = "form-control" })
                        <span asp-validation-for="GestionTramite.IdDetalleEstado" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group-row mt-4">
                    <div class="col-8">
                        <partial name="_VistaCrearVolver" model="ParametrosBotones" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/gestionTramite.js"></script>
}