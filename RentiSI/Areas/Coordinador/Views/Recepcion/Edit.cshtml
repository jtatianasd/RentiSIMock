@model RentiSI.Modelos.viewModels.ResponseViewModel
@{
    ViewData["Title"] = "Recepcion";
    var ParametrosBotones = new { LabelBoton = "Actualizar", ClaseBoton = "warning" };
}

<div class="container mt-5 d-flex justify-content-center align-items-center">
    <div class="row">
        <div class="col-6 offset-2 mt-4 text-center">
            <h1>
                <small class="text-body-secondary">Editar Recepción</small>
            </h1>
        </div>

        <form method="POST" asp-action="Update">
            <input type="hidden" asp-for="GestionId" value="@Model.Recepcion.RecepcionId" />
            <div class="col-12 offset-1 mt-4">
                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Número de placa</label>
                    </div>
                    <div class="col-6">
                        <label asp-for="@Model.Tramite.NumeroPlaca">@Model.Tramite.NumeroPlaca</label>
                    </div>
                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Fecha Asignación</label>
                    </div>
                    <div class="col-6">
                        <label asp-for="@Model.FechaAsignacion">@Model.FechaAsignacion</label>
                    </div>
                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Observación</label>
                    </div>
                    <div class="col-6">
                        <textarea class="form-control" id="Observacion" rows="3" asp-for="@Model.Recepcion.Observacion">@Model.Recepcion.Observacion"</textarea>
                    </div>
                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Organismo de Tránsito</label>
                    </div>
                    <div class="col-6">
                        @Html.DropDownListFor(m => m.Tramite.OrganismoDeTransitoId, Model.ListaOrganismosTransito,
                                 "-Por favor seleccione un organismo de transito-", new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Aprobado</label>
                    </div>
                    <div class="col-6">
                        <div class="form-check form-switch">
                            <input asp-for="@Model.Recepcion.EsRecepcion" class="form-check-input" type="checkbox" id="fechaRecepcionSwitch">
                            <span asp-validation-for="@Model.Recepcion.EsRecepcion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group-row mt-4">
                    <div class="col-8">

                        <partial name="_VistaCrearVolver" model="ParametrosBotones" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>