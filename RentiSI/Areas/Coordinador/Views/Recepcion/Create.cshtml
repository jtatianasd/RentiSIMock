@model RentiSI.Modelos.viewModels.ResponseViewModel
@{
    ViewData["Title"] = "Recepcion";
    var ParametrosBotones = new { LabelBoton = "Actualizar", ClaseBoton = "warning" };
}

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-2 mt-4 text-center">
            <h3>
                <small class="text-body-secondary">Crear Recepción</small>
            </h3>
        </div>
    </div>
    <form method="POST" asp-action="Create">
        <div class="col-10 offset-1 mt-4">
            <div class="row mt-2 mb-2">
                <div class="col-3">
                    <label class="fw-bold">Numero de placa</label>
                </div>
                <div class="col-6">
                    <label asp-for="Tramite.NumeroPlaca">@Model.Tramite.NumeroPlaca</label>
                </div>
            </div>

            <div class="row mt-2 mb-2">
                <div class="col-3">
                    <label class="fw-bold">Fecha Asignacion</label>
                </div>
                <div class="col-6">
                    <div class="">
                        <label asp-for="Tramite.FechaCreacion">@Model.Tramite.FechaCreacion</label>
                    </div>
                </div>
            </div>

            <div class="row mt-2 mb-2">
                <div class="col-3">
                    <label class="fw-bold">Observación</label>
                </div>
                <div class="col-6">
                    <textarea class="form-control" id="Observacion" rows="3" asp-for="@Model.Tramite.Observaciones"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label class="fw-bold">Organismo de Tránsito</label>
                </div>
                <div class="col-6">
                    @Html.DropDownListFor(m => m.ListaOrganismosTransito, Model.ListaOrganismosTransito,
                             "-Por favor seleccione un organismo de transito-", new { @class = "form-control" })
                </div>
            </div>

            <div class="row mt-2 mb-2">
                <div class="col-3">
                    <label class="fw-bold">Recepción</label>
                </div>
                <div class="col-6">
                    <div class="form-check form-switch">
                        <input asp-for="Recepcion.EsRecepcion" class="form-check-input" type="checkbox" id="fechaRecepcionSwitch">
                        <span asp-validation-for="Recepcion.EsRecepcion" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group-row mt-4">
                <div class="col-8">

                    <partial name="_VistaCrearVolver" model="ParametrosBotones" />
                </div>
            </div>
        </div>

    </form>
</div>