@model RentiSI.Modelos.viewModels.ReasignacionVM
@{
    ViewData["Title"] = "Reasignación Tramites";
    var ParametrosBotones = new { LabelBoton = "Reasignar", ClaseBoton = "success" };
}

<div class="container mt-3 d-flex justify-content-center">
    <div class="row">
        <div class="col-4 offset-4">
            <h3>
                <small class="text-body-secondary">Reasignación Trámites</small>
            </h3>
        </div>

        <form method="POST" asp-action="Create" enctype="multipart/form-data">
            <input type="hidden" asp-for="Tramite.Id" />
            <input type="hidden" asp-for="Tramite.NumeroPlaca" />
            <input type="hidden" asp-for="Gestion.IdDetalleEstado" />
            <div class="col-12 offset-1 mt-4">
                <div class="row mt-4 mb-4">
                    <div class="col-3">
                        <label class="fw-bold">Última Revisión</label>
                    </div>
                    <div class="col-6">
                        @Html.DropDownListFor(m => m.Revision.IdUsuarioRevision, Model.ListaUsuarios,
                                 "-Por favor seleccione un usuario-", new { @class = "form-control" })
                    </div>
                </div>
                <div class="row mt-4 mb-4">
                    <div class="col-3">
                        <label class="fw-bold">Organismo de tránsito</label>
                    </div>
                    <div class="col-6">
                        @Html.DropDownListFor(m => m.Tramite.OrganismoDeTransitoId, Model.ListaOrganismosTransito,
                                 "-Por favor seleccione un organismo de transito-", new { @class = "form-control" })
                    </div>
                </div>
                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <label class="fw-bold">Observación</label>
                    </div>
                    <div class="col-6">
                        <textarea class="form-control" id="Observacion" rows="3" asp-for="@Model.Reasignacion.Observaciones">@Model.Reasignacion.Observaciones"</textarea>
                    </div>
                </div>
                <div class="form-group-row mt-4">
                    <div class="col-8">
                        <partial name="_VistaCrearVolver" model="ParametrosBotones" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>