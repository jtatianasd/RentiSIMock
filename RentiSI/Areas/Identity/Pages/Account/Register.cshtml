@page
@using RentiSI.Utilidades
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h1 class="text-center">Crear una nueva cuenta</h1>

<div class="row">
    <div class="col-md-8 offset-2">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
       
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Correo electronico</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Nombre" class="form-control" autocomplete="nombre" aria-required="true" placeholder="ingrese el nombre" />
                <label asp-for="Input.Nombre">Nombre</label>
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Contraseña</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <!--Selector de Roles-->
            <div class="form-group row">
                <div class="col-4"><h4><small>Rol de Usuario:</small></h4></div>
                <div class="col-6">
                    <select class="form-select" id="selectRol" name="selectRol">
                        <option value="@CNT.Administrador">@CNT.Administrador</option>
                        <option value="@CNT.Usuario">@CNT.Usuario</option>
                        <option value="@CNT.Cliente">@CNT.Cliente</option>
                        <option value="@CNT.Coordinador">@CNT.Coordinador</option>
                        <option value="@CNT.Operativo">@CNT.Operativo</option>
                    </select>
                </div>
            </div>
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Guardar</button>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
