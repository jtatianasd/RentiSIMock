@model object

@{
    var boton = Model.GetType().GetProperty("LabelBoton").GetValue(Model);
    var claseBoton = Model.GetType().GetProperty("ClaseBoton").GetValue(Model);
}

<div class="row">
    <div class="col">
        <button type="submit" class="btn btn-@claseBoton form-control" onclick="this.disabled=true; this.value='Procesando...'; this.form.submit();">@boton</button>
    </div>

    <div class="col">
        <a asp-action="Index" class="btn btn-secondary form-control">Volver atrás</a>
    </div>
</div>