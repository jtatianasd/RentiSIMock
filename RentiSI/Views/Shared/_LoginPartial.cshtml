@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
   
    @if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await SignInManager.UserManager.GetUserAsync(User);

        <li class="nav-item">
            <p class="nav-link text-dark" asp-area="Identity" title="Manage">Hola, @currentUser.Nombre!</p>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Cerrar sesion</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Acceso</a>
        </li>
    }
</ul>
